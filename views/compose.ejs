<%- include('partials/header');%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="lbl_post_title">Title</label>
            <input type="text" name="post_title" placeholder="Enter Diary Title" autofocus autocomplete="off" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="lbl_post_title">Author</label>
            <input type="text" name="post_author" placeholder="Enter Author" autofocus autocomplete="off" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="lbl_post_title">Date</label>
            <input type="date" name="post_date" placeholder="Enter Date Created" autofocus autocomplete="off" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="lbl_post_content">Post</label>
            <textarea name="post_content" rows="10" cols="30" class="form-control" placeholder="Enter Diary Content" ></textarea>
        </div>
        
        <button type="submit" name="publish" class="btn btn-primary">Publish</button>
    </form>
<%- include('partials/footer');%>